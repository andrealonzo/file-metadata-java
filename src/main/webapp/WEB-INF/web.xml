<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	      http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

	<servlet>
		<servlet-name>UrlShortener</servlet-name>
		<servlet-class>com.aalonzo.servlet.UrlShortenerServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoadUrl</servlet-name>
		<servlet-class>com.aalonzo.servlet.LoadUrlServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UrlShortener</servlet-name>
		<url-pattern>/new/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoadUrl</servlet-name>
		<url-pattern>/s/*</url-pattern>
	</servlet-mapping>
</web-app>
